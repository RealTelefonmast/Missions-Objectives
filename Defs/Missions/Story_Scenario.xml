<?xml version="1.0" encoding="utf-8" ?>
<Defs>
		
	<ScenarioDef>
		<defName>RimWorldTutorial</defName>
		<label>Tutorial</label>
		<description>This scenario will teach you some basics of RimWorld.</description>
		<scenario>
			<summary>Time to learn!</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>3</pawnCount>
					<pawnChoiceCount>8</pawnChoiceCount>
				</li>
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>DropPods</method>
					<visible>true</visible>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Gun_BoltActionRifle</thingDef>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Gun_Revolver</thingDef>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Knife</thingDef>
					<stuff>Plasteel</stuff>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Apparel_FlakPants</thingDef>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Apparel_FlakVest</thingDef>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Apparel_AdvancedHelmet</thingDef>
					<stuff>Plasteel</stuff>
				</li>
				
				<!-- Mission unlocks -->
				<li Class="StoryFramework.ScenPart_Story">
					<def>ScenPartStory</def>
					<UnlockedMissions>
						<li>ElectricitySetup</li>
					</UnlockedMissions>
				</li>
				
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<textKey>GameStartDialog</textKey>
					<closeSound>GameStartSting</closeSound>
				</li>
			</parts>
		</scenario>		
	</ScenarioDef>
	
</Defs>